#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

bool check(const vector<int>& h, int k, int R, int H) {
    for (int i = 0; i < H; i++) {
        int used = 1;
        int limit = h[i] + 2 * R;

        for (int j = i; j < (i + H); j++) {
            if (h[j] > limit) {
                used++;
                limit = h[j] + 2 * R;
                if (used > k) break;
            }
        }

        if (used <= k) return true;
    }
    return false;
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int H;
    cin >> H;

    vector<int> h(H);
    for (int i = 0; i < H; i++) {
        cin >> h[i];
    }
    sort(h.begin(), h.begin() + H);

    for (int i = 0; i < H; i++) {
        h.push_back(h[i] + 1000000);
    }

    int k;

    cin >> k;

    int low = 0;
    int high = 500000;
    int ans = high;

    while (low <= high) {
        int mid = (low + high) / 2;
        if (check(h, k, mid, H)) {
            ans = mid;
            high = mid - 1;
        } else {
            low = mid + 1;
        }
    }

    cout << ans;
    return 0;
}
