#include <iostream>
#include <vector>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    cin >> n;

    vector<int> r1(n);
    vector<int> r2(n);

    int total = 0;

    for (int i = 0; i < n; i++) {
        cin >> r1[i];
    }

    for (int i = 0; i < n; i++) {
        cin >> r2[i];
    }

    for (int i = 0; i < n; i++) {
        if (r1[i] == 1) {
            total += 3;
            if (i != 0 && r1[i-1] == 1) {
                total--;
            }
            if (i != n-1 && r1[i+1] == 1) {
                total--;
            }
            if (i % 2 == 0 && r2[i] == 1) {
                total--;
            }
        }
        
        if (r2[i] == 1) {
            total += 3;
            if (i != 0 && r2[i-1] == 1) {
                total--;
            }
            if (i != n-1 && r2[i+1] == 1) {
                total--;;
            }
            if (i % 2 == 0 && r1[i] == 1) {
                total--;
            }
        }
    }

    cout << total;

    return 0;
}
